<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:DotaAnalyst"
             x:Class="DotaAnalyst.StatsPage"
             BackgroundColor = "#1C1C1C">
    <ContentPage.Content>
        <AbsoluteLayout >
            <Button BackgroundColor="#303030" 
                AbsoluteLayout.LayoutFlags="All"
                AbsoluteLayout.LayoutBounds="0.182, 0.502, 0.34, 0.252"
                CornerRadius="15"
                Text="{local:Translate StatsPagePubButton}"
                TextColor="#FFFFFF"
                 
                Clicked="onPubClicked"
        />

            <Button  BackgroundColor="#303030"
                AbsoluteLayout.LayoutFlags="All"
                 
                AbsoluteLayout.LayoutBounds="0.85, 0.502, 0.34, 0.252"
                           
                Text="{local:Translate StatsPageProButton}"
                TextColor="#FFFFFF"
                CornerRadius="15"
                 
                Clicked="onProClicked"
                
        />

         

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>